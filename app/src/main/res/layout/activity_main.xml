<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backgroundSelector"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="30dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:background="@color/cloudBlack"
    tools:context=".MainActivity">

    <!--    The Icons-->
    <ImageView
        android:id="@+id/choiceVisibilityChangerIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_eye" />

    <ImageView
        android:id="@+id/addCardQuestionsIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_add_new_cards"
        />
    <ImageView
        android:id="@+id/editCurrentCardsIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_edit_current_cards" />

    <ImageView
        android:id="@+id/nextFlashCardIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/addCardQuestionsIcon"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_next_flashcard" />

    <ImageView
        android:id="@+id/deleteFlashCardIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/choiceVisibilityChangerIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_delete_flashcard" />

    <ImageView
        android:id="@+id/refreshIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/choiceVisibilityChangerIcon"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_refresh_choices" />


    <!--    Multiple Choice Section-->
    <TextView
        android:id="@+id/answerChoiceOneTextView"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_below="@+id/mainFlashCardQuestionTextView"
        android:layout_margin="10dp"
        android:background="@drawable/answer_card_background"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="-"
        android:textColor="@color/black"
        app:autoSizeMaxTextSize="20sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/answerChoiceTwoTextView"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_below="@+id/answerChoiceOneTextView"
        android:layout_margin="10dp"
        android:background="@drawable/answer_card_background"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="-"
        android:textColor="@color/black"
        app:autoSizeMaxTextSize="20sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/answerChoiceThreeTextView"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_below="@+id/answerChoiceTwoTextView"
        android:layout_margin="10dp"
        android:background="@drawable/answer_card_background"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="-"
        android:textColor="@color/black"
        app:autoSizeMaxTextSize="20sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform" />

    <!--    Questions and Answer Card Section-->
    <TextView
        android:id="@+id/mainFlashCardQuestionTextView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/question_card_background"
        android:elevation="5dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="--"
        android:textColor="@color/grayishWhite"
        app:autoSizeMaxTextSize="100sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/mainFlashCardAnswerTextView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/answer_card_background"
        android:elevation="5dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="--"
        android:textColor="@color/black"
        app:autoSizeMaxTextSize="100sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        app:autoSizeMaxTextSize="20sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        android:text="15"
        android:textColor="@color/pomegranateRed"
        />

</RelativeLayout>